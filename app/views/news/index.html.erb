<h1>Новости</h1>

<div class="row">
  <div class="col-lg-8">

    <% @news.each do |news| %>
      
  	
  												
		<%= news.date %><br>
    <h2>  <b>  <%= news.title %></b></h2><br>
        <%= news.description.slice(0,500).html_safe +
                    (news.description.length > 500 ? '...' : '') %><br><br>

        <%= link_to "Полностью", news, class: "btn btn-default" %>
        
        <%= link_to 'Править', edit_news_path(news) %>
       <%= link_to 'Удалить', news, method: :delete, data: { confirm: 'Вы уверены?' } %><br>
	   
 
      
    <% end %>
 </div>
<br>

<%= link_to 'Создать новость', new_news_path %>

</div>
